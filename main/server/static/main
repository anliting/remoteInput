<!doctype html>
<title>Remote Input</title>
<body>
<script type=module>
import doe from'./_doe.mjs'
async function get(path){
    let res=await fetch(new Request(path))
    if(!res.ok)
        throw['httpStatus',res.status]
    return res
}
let
    composing=0,
    input,
    readyToSend
function checkValue(){
    if(composing)
        return
    let value=input.value
    input.value=''
    readyToSend=(async()=>{
        await readyToSend
        await get(`/api/${JSON.stringify(['in',value])}`)
    })()
}
doe.head(
    doe.style(`
        html{
            height:100%;
        }
        body{
            margin:0;
            height:100%;
        }
        body>input{
            border:unset;
            padding:unset;
            width:0;
        }
    `)
)
doe.body(
    {
        onclick(){
            input.focus()
        }
    },
    input=doe.input(n=>{
        n.addEventListener('compositionstart',e=>{
            composing=1
        })
        n.addEventListener('compositionend',e=>{
            composing=0
            checkValue()
        })
        n.addEventListener('input',e=>{
            checkValue()
        })
    }),
)
input.focus()
window.ui={
    out(){
        ;(async()=>{
            console.log(
                await(await get(`/api/${
                    encodeURIComponent(JSON.stringify(['out']))
                }`)).text()
            )
        })()
    }
}
</script>
